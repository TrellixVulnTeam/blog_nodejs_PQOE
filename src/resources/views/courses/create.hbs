<div class="mt-4">
    <h2 class="text-center">Create course</h2>
    <form class="col-6 m-auto" method="post" action="/courses/store">
    <div class="form-group">
        <label for="description">Name</label>
        <input type="text" name="name" class="form-control">
    </div>
    <div class="form-group">
        <label for="description">Description</label>
        <input type="text" name="description" class="form-control">
    </div>
    <div class="form-group">
        <label for="description">Video</label>
        <input type="text" name="videoId" class="form-control">
    </div>
    <div class="form-group">
        <label for="description">Level</label>
        <input type="text" name="level" class="form-control">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    </form>    
</div>