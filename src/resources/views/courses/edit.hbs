<div class="mt-4">
    <h2 class="text-center">Edit course</h2>
    <form class="col-6 m-auto" method="post" action="/courses/{{course._id}}?_method=put">
    <div class="form-group">
        <label for="description">Name</label>
        <input type="text" name="name" class="form-control" value="{{course.name}}">
    </div>
    <div class="form-group">
        <label for="description">Description</label>
        <textarea class="form-control">{{course.description}}</textarea>
    </div>
    <div class="form-group">
        <label for="description">Video</label>
        <input type="text" name="videoId" class="form-control" value="{{course.videoId}}">
    </div>
    <div class="form-group">
        <label for="description">Level</label>
        <input type="text" name="level" class="form-control" value="{{course.level}}">
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    </form>    
</div>